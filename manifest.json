{
  "manifest_version": 3,
  "name": "Translator",
  "description": "Translator extension",
  "version": "1.0.0",
  "action": {
    "default_title": "Popup",
    "default_icon": "icon128.png",
    "default_popup": "index.html"
  },
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "32": "icon32.png",
    "16": "icon16.png"
  },
  "background": {
    "service_worker": "service-worker/service_worker.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content-script/src/main.tsx"
      ],
      "run_at": "document_end",
      "media": []
    }
  ],
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage"
  ]
}